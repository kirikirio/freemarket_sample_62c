      - @ladies.each do |lady|
        = link_to "#" do
          .new__items__container__box
            %figure
              = image_tag lady.images[0].image.url , class:'new__items__container__box-item_phot'
              %p.new__items__container__box-price
                = "¥#{lady.price.to_s(:delimited)}"
