= render 'shared/registration-header'

.main
  .address-box
    .address-box__title
      %h1 発送元・お届け情報入力
    .address-box__contents
      = form_with model: User.new, class: "address-box__contents__form", url: credit_signup_index_path  do |f|
        .form-group.first-form
          .form-group__label
            %label{class: 'form-group__label__text'} お名前
            %span{class: 'form-group__label__require'} 必須
          = f.text_field :firstname, class: "form-group__input", value: "", placeholder: "例）山田"
          = f.text_field :lastname, class: "form-group__input second-input", value: "", placeholder: "例）彩"
          


        .form-group  
          .form-group__label
            %label{class: 'form-group__label__text'} お名前カナ
            %span{class: 'form-group__label__require'} 必須
          = f.text_field :firstname_kana, class: "form-group__input", value: "", placeholder: "例）ヤマダ"  
          = f.text_field :lastname_kana, class: "form-group__input second-input", value: "", placeholder: "例）アヤ"

        .form-group  
          .form-group__label
            %label{class: 'form-group__label__text'} 郵便番号
            %span{class: 'form-group__label__require'} 必須
          = f.text_field :postal_code, class: "form-group__input", value: "", placeholder: "例）123-4567", maxlength: "8"

        .form-group  
          .form-group__label
            %label{class: 'form-group__label__text'} 都道府県
            %span{class: 'form-group__label__require'} 必須
          .form-group__select__item
            %i{class: 'icon-arrow-down fa fa-chevron-down'}
            %select{name: "prefecture", class: "first-select"}
              %option 北海道
              -# = f.collection_select :prefecture_id, Prefecture.all, :id, :name, prompt: "--", class: 'first-select'

        .form-group  
          .form-group__label
            %label{class: 'form-group__label__text'} 市区町村
            %span{class: 'form-group__label__require'} 必須
          = f.text_field :city, class: "form-group__input", value: "", placeholder: "例）横浜市緑区"

        .form-group  
          .form-group__label
            %label{class: 'form-group__label__text'} 番地
            %span{class: 'form-group__label__require'} 必須
          = f.text_field :city_block, class: "form-group__input", value: "", placeholder: "例）青山1-1-1"

        .form-group  
          .form-group__label
            %label{class: 'form-group__label__text'} 建物名
            %span{class: 'form-group__label__optional optional'} 任意
          = f.text_field :building, class: "form-group__input", value: "", placeholder: "例）柳ビル103"

        .form-group  
          .form-group__label
            %label{class: 'form-group__label__text'} 電話
            %span{class: 'form-group__label__optional optional'} 任意
          = f.phone_field :tel_number, class: "form-group__input", value: "", placeholder: "例）09012345678", maxlength: "15"
      
        
        = f.submit "次へ進む", class:'btn address-box__contents__form__submit'

= render 'shared/sub-footer'