          .form-group__label
            %label{class: 'form-group__label__text'} 都道府県
            %span{class: 'form-group__label__require'} 必須
          .form-group__select__item
            %i{class: 'icon-arrow-down fa fa-chevron-down'}
            %select{name: "year", class: " first-select"}
              %option 北海道

        .form-group  
          .form-group__label
            %label{class: 'form-group__label__text'} 市区町村
            %span{class: 'form-group__label__require'} 必須
          %input{type: "text", name: "city", value: "", placeholder: "例）横浜市緑区", class: "form-group__input"}

        .form-group  
          .form-group__label
            %label{class: 'form-group__label__text'} 番地
            %span{class: 'form-group__label__require'} 必須
          %input{type: "text", name: "city_block", value: "", placeholder: "例）青山1-1-1", class: "form-group__input"}

        .form-group  
          .form-group__label
            %label{class: 'form-group__label__text'} 建物名
            %span{class: 'form-group__label__optional optional'} 任意
          %input{type: "text", name: "building", value: "", placeholder: "例）柳ビル103", class: "form-group__input"}

        .form-group  
          .form-group__label
            %label{class: 'form-group__label__text'} 電話
            %span{class: 'form-group__label__optional optional'} 任意
          %input{type: "tel", name: "tel_number", value: "", placeholder: "例）09012345678", class: "form-group__input"}
        
        %button{type: 'submit', class: 'btn address-box__contents__form__submit'}
          次へ進む

